# Environment Configuration for EmpowerHer Backend - Production

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (Use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/empowerher?retryWrites=true&w=majority

# JWT Configuration (Generate strong secret: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-generate-strong-secret-for-production

# Frontend URL (Update with your deployed frontend URL)
FRONTEND_URL=https://your-frontend-domain.com

# Backend URL (Update with your deployed backend URL)
BACKEND_URL=https://your-backend-domain.com

# Paystack Payment Gateway Configuration
PAYSTACK_PUBLIC_KEY=pk_live_your_public_key
PAYSTACK_SECRET_KEY=sk_live_your_secret_key
PAYSTACK_WEBHOOK_SECRET=your-paystack-webhook-secret
PAYSTACK_API_URL=https://api.paystack.co
PAYSTACK_REDIRECT_URL=https://empowerher-frontend.vercel.app/payment-success

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Police Database Integration
POLICE_API_URL=https://api.police-database.com
POLICE_API_KEY=your-police-api-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key-generate-strong-secret

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log


